  "version": "2.0.0",
  "tasks": [
    {
      "label": "STF antl4 build",
      "type": "shell",
      "command": "antlr",
      "args": [
        "-listener",
        "-no-visitor",
        "-package",
        "net.unixcode.rts.parser.antlr",
        "-Xexact-output-dir",
        "-o",
        "src/main/java/net/unixcode/rts/parser/antlr",
        "src/main/java/net/unixcode/rts/parser/antlr/grammar/stf.g4"
      ],
      "group": "build"
    }
  ]
}
